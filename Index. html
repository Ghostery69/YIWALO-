    <script>
        // Gestion du panier
        document.addEventListener('DOMContentLoaded', function() {
            const cartIcon = document.querySelector('.cart-icon');
            const cart = document.querySelector('.cart');
            const closeCart = document.querySelector('.close-cart');
            const addToCartButtons = document.querySelectorAll('.add-to-cart');
            const cartItems = document.querySelector('.cart-items');
            const cartTotal = document.querySelector('.cart-total');
            const cartCount = document.querySelector('.cart-count');
            const checkoutBtn = document.querySelector('.checkout-btn');
            
            let cartProducts = [];
            
            // Ouvrir/fermer le panier
            cartIcon.addEventListener('click', () => {
                cart.classList.add('active');
            });
            
            closeCart.addEventListener('click', () => {
                cart.classList.remove('active');
            });
            
            // Ajouter un produit au panier
            addToCartButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const id = button.dataset.id;
                    const name = button.dataset.name;
                    const price = parseInt(button.dataset.price);
                    
                    // V√©rifier si le produit est d√©j√† dans le panier
                    const existingProduct = cartProducts.find(product => product.id === id);
                    
                    if (existingProduct) {
                        existingProduct.quantity += 1;
                    } else {
                        cartProducts.push({
                            id,
                            name,
                            price,
                            quantity: 1
                        });
                    }
                    
                    updateCart();
                    cart.classList.add('active');
                    
                    // Animation du bouton
                    button.innerHTML = '<i class="fas fa-check"></i> Ajout√©!';
                    setTimeout(() => {
                        button.innerHTML = '<i class="fas fa-cart-plus"></i> Ajouter au panier';
                    }, 1500);
                });
            });
            
            // Mettre √† jour le panier
            function updateCart() {
                cartItems.innerHTML = '';
                let total = 0;
                let count = 0;
                
                if (cartProducts.length === 0) {
                    cartItems.innerHTML = '<p style="text-align: center; color: #777;">Votre panier est vide</p>';
                } else {
                    cartProducts.forEach(product => {
                        const productTotal = product.price * product.quantity;
                        total += productTotal;
                        count += product.quantity;
                        
                        const cartItem = document.createElement('div');
                        cartItem.classList.add('cart-item');
                        cartItem.innerHTML = `
                            <div class="cart-item-info">
                                <h4>${product.name}</h4>
                                <div class="cart-item-price">${product.price} FCFA x ${product.quantity}</div>
                            </div>
                            <div>${productTotal} FCFA</div>
                        `;
                        
                        cartItems.appendChild(cartItem);
                    });
                }
                
                cartTotal.textContent = `Total: ${total} FCFA`;
                cartCount.textContent = count;
            }
            
            // Passer la commande
            checkoutBtn.addEventListener('click', () => {
                if (cartProducts.length === 0) {
                    alert('Votre panier est vide!');
                    return;
                }
                
                let message = 'Bonjour Loukman Service, je souhaite commander les produits suivants:\n\n';
                let total = 0;
                
                cartProducts.forEach(product => {
                    const productTotal = product.price * product.quantity;
                    total += productTotal;
                    message += `- ${product.name} (x${product.quantity}): ${productTotal} FCFA\n`;
                });
                
                message += `\nTotal: ${total} FCFA\n\nMerci de me contacter pour finaliser la commande.`;
                
                // Encoder le message pour WhatsApp
                const encodedMessage = encodeURIComponent(message);
                const whatsappURL = `https://wa.me/22652839161?text=${encodedMessage}`;
                
                // Ouvrir WhatsApp
                window.open(whatsappURL, '_blank');
                
                // Vider le panier apr√®s commande
                cartProducts = [];
                updateCart();
                cart.classList.remove('active');
            });
        });
    </script>
</body>
